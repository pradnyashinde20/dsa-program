package com.demo.list;

public class MyLinkedList {
	Node head;
	class Node{
		int data;
		Node next;
		public Node(int data){
			this.data = data;
			this.next =null;
		}
	}
	public MyLinkedList() {
	  head = null;
	}
	public void addNode(int num) {
		Node newNode = new Node(num);
		if(head!=null) {
			newNode.next = head;
		}
		head = newNode;
	}
	
	public boolean search(int num) {
		
		if(head==null) {
			return false;
		}else {
			Node temp = head;
			while(temp!=null && temp.data!=num) {
				temp=temp.next;
			}
			if(temp.data ==num) {
				return true;
			}
			return false;
		}
	}
   
	public int [] getAdjencencyNodes(int arr[]) {
		Node temp =head;
		for(int i=0;temp=null && i<arr.length;i++) {
			arr[i]=temp.data;
			temp = temp.next;
		}
	}
}
