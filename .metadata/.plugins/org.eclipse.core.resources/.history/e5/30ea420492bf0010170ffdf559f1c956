package com.demo.service;

public class OneDArray {

	public int[] digitAdd(int[] arr) {
	     for(int i=0;i<arr.length;i++) {
	    	 int res =0;
	    	 while(arr[i]>0) {
	    		int rem = arr[i]%10;
	    		 res=res+rem;
	    		 arr[i]=arr[i]/10;
	    		 
	    	 }
	    	 
	    	  arr[i]=res;
	     }
		
		return arr;

	}
   
	
	
	public int[] primeFactorial(int[] arr) {
		int temp[]= new int[arr.length];
		for(int i=0;i<arr.length;i++) {
		int res= checkPrime(arr[i]);
		temp[i]= res;
		}
		for(int i=0;i<temp.length;i++) {
			int fact=1;
			for(int j=temp[i];j>0;j--) {
				fact =fact*j;
				temp[i]=fact;
			}
		}
		return temp;
	}

	private int checkPrime(int num) {
		if(num<=1) {
			return 0;
		}
      for(int i=2;i<=Math.sqrt(num);i++) {
    	  if(num%i==0) {
    		  return 0;
    	  }
      }
		return num;
	}



	public int maxPrime(int[] arr) {
		int temp[]=new int [arr.length];
		
	  for(int i=0;i<arr.length;i++) {
		 int res = checkPrime(arr[i]);
		 temp[i]=res;
		  }
		int max=temp[0];
		for(int j=1;j<temp.length;j++) {
			if(temp[j]>max) {
				max=temp[j];
			}
		}
	  
		return max;
	}



	public int[] copyArray(int[] arr) {
		int[] temp = new int[arr.length];
		int res=0;
		for(int i=0;i<arr.length;i++){
				temp[i]=checkPrime(arr[i]);
				while(temp[i]>5)
				{
					int rem=temp[i]%10;
					res=temp[i]*10+res;
					temp[i]=temp[i]/10;
					
				}
				 temp[i]=arr[i];
				 
					
				}
		return null;
	}
		  
	
}
