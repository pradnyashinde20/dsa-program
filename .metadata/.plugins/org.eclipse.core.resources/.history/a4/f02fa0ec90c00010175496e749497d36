package com.demo.service;

import java.util.Scanner;

public class OneDArray {

	public int[] digitAdd(int[] arr) {
	     for(int i=0;i<arr.length;i++) {
	    	 int res =0;
	    	 while(arr[i]>0) {
	    		int rem = arr[i]%10;
	    		 res=res+rem;
	    		 arr[i]=arr[i]/10;
	    		 
	    	 }
	    	 
	    	  arr[i]=res;
	     }
		
		return arr;

	}
   
	
	
	public int[] primeFactorial(int[] arr) {
		int temp[]= new int[arr.length];
		for(int i=0;i<arr.length;i++) {
		int res= checkPrime(arr[i]);
		temp[i]= res;
		}
		for(int i=0;i<temp.length;i++) {
			int fact=1;
			for(int j=temp[i];j>0;j--) {
				fact =fact*j;
				temp[i]=fact;
			}
		}
		return temp;
	}

	private int checkPrime(int num) {
		if(num<=1) {
			return 0;
		}
      for(int i=2;i<=Math.sqrt(num);i++) {
    	  if(num%i==0) {
    		  return 0;
    	  }
      }
		return num;
	}



	public int maxPrime(int[] arr) {
		int temp[]=new int [arr.length];
		
	  for(int i=0;i<arr.length;i++) {
		 int res = checkPrime(arr[i]);
		 temp[i]=res;
		  }
		int max=temp[0];
		for(int j=1;j<temp.length;j++) {
			if(temp[j]>max) {
				max=temp[j];
			}
		}
	  
		return max;
	}



	public int[] copyArray(int[] arr) {
		int[] temp = new int[arr.length];
		int res=0;
		for(int i=0;i<arr.length;i++){
			if(checkPrime(arr[i])!=0 && arr[i]>5) {
				int rev=0;
				while(arr[i]>0) {
					int rem = arr[i]%10;
					rev = rev*10+rem;
					arr[i]=arr[i]/10;
					temp[i]=rev;
				}
			}else {
			temp[i]=arr[i];
			}
				 
				 
					
	}
		return temp;
	}



	public void acceptString(String[] arr1) {
		
		Scanner sc=new Scanner(System.in);
		String temp[]=new String[arr1.length];
		for(int i=0;i<arr1.length;i++)
		{
			arr1[i]=sc.nextLine();
		}
		for(int i=0;i<arr1.length-1;i++) {
			//char word=arr1[i].charAt(2);
			for(int j=0;j<arr1.length-1;j++) {
			if(arr1[i].charAt(2)==arr1[j+1].charAt(2))
			{
				temp[i]=arr1[i];
				arr1[i]=arr1[j+1];
				arr1[j+1]=temp[i];
				System.out.println(arr1[i]);
			}
			}
			
		}
		
		
		
		
	}
		  
	
}
