package com.demo.linkedlist;

public class CircularDoublyLinkedList {
	Node head;
	class Node{
		int data;
		Node prev;
		Node next;
		public Node(int data)
		{
			this.data=data;
			this.prev=null;
			this.next=null;
		}
	}
	public void addNewNode(int value)
	{
		Node newNode=new Node(value);
		if(head==null)
		{
			head=newNode;
			newNode.next=head;
			head.prev=newNode;
			
		}
		else {
			Node temp=head;
			while(temp.next!=head)
			{
				temp=temp.next;
			}
			newNode.next=temp;
			newNode.prev=temp;
			temp.next.prev=newNode;
			head.prev=newNode;	
		}
		
	}
	
	public void display()
	{
		if(head==null)
		{
			System.out.println("list is empty");
		}
		else {
			Node temp=head.prev;
			do
			{
				System.out.println(temp.data+"--------");
				temp=temp.next;
			}while(temp!=prev.head);
		}
	}

}
